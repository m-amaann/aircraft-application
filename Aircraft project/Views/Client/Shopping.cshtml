@model IEnumerable<Aircraft_project.Models.Aircraft>

@{
    ViewData["Title"] = "Shopping";
}

<!-- Shop Start -->
<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <!-- Shop Sidebar Start -->
        <div class="col-lg-3  col-md-12 mt-5">
            <!-- Category Start -->
            <div class="mb-5">
                <h5 class="font-weight-semi-bold mb-4 text-danger">Filter by Category</h5>

                <form action="/Client/FilterProducts" method="get">
                    <div class="mb-3">
                        <select class="form-select" name="category">
                            <option value="">All</option>
                            <option value="Commercial">Commercial</option>
                            <option value="Military">Military</option>
                            <option value="Private">Private</option>
                            <!-- Add more options as needed -->
                        </select>
                    </div>
                    <div class="mb-3">
                        <input type="text" class="form-control" placeholder="Search" name="search">
                    </div>
                    <button type="submit" class="btn btn-primary">Filter</button>
                </form>
            </div>
        </div>

        <!-- Shop Product Start -->
        <div class="col-lg-9 col-md-12 mt-5">
            <div class="row pb-3 filter_dataa" id="product-list">
                @if (Model != null)
                {
                    @foreach (var filteredProducts in Model)
                    {
                        <div class="product-card">
                            <div class="product-image">
                                <img src="@filteredProducts.ImagePath" alt="Aircraft Model" class="img-fluid w-100 col-hover">
                            </div>
                            <div class="product-details">
                                <div class="product-brand">@filteredProducts.Name</div>
                                <h2 class="product-title">@filteredProducts.AdditionalInformation</h2>
                                <div class="product-price">$@filteredProducts.Price</div>
                            </div>
                            <div class="button-container">
                                <a href="/Client/DetailedPage?id=@filteredProducts.Id" class="order-button">View More</a>
                                @* <button class="add-to-cart" onclick="slideIcon()">
                        Cart
                        <i class="fas fa-shopping-cart cart-icon"></i>
                        </button> *@
                            </div>
                        </div>

                    }}
                else
                {
                    <p>No aircraft data available.</p>
                }
            </div>
            <div class="text-center">
                <button class="btn btn-primary load-more">
                    Load More
                    <i class="fa fa-arrow-down"></i>
                </button>
            </div>
        </div>
        <!-- Shop Product End -->
    </div>
</div>
<!-- Shop End -->