@model Aircraft_project.Models.Users


@{
    ViewData["Title"] = "Register";
}


<section class="vh-100 d-flex align-items-center justify-content-center">
    <div class="container">
        <div class="row shadow text-secondary ">
            <div class="col-md-6 shadow p-5 rounded">
                <h2 class="font-weight-bold">CREATE AN ACCOUNT</h2>
                <hr class="mb-5">

                <form asp-action="Register" asp-controller="Client" method="post">
                    <div class="form-row">
                        <!-- Full Name Input -->
                        <div class="form-group col-md-6">
                            <label asp-for="name"></label>
                            <input asp-for="name" class="form-control" placeholder="Enter your full name" />
                            <span asp-validation-for="name" class="text-danger"></span>
                        </div>
                        <!-- Email Input -->
                        <div class="form-group col-md-6">
                            <label asp-for="email"></label>
                            <input asp-for="email" class="form-control" placeholder="Enter your email" />
                            <span asp-validation-for="email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="mobilenumber"></label>
                        <input asp-for="mobilenumber" class="form-control" pattern="[+][0-9]{10,15}" placeholder="Enter your mobile number" />
                        <span asp-validation-for="mobilenumber" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="address"></label>
                        <input asp-for="address" class="form-control" placeholder="Enter address" />
                        <span asp-validation-for="address" class="text-danger"></span>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="password"></label>
                            <input asp-for="password" type="password" class="form-control" placeholder="Create a password" />
                            <span asp-validation-for="password" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="registerConfirmPassword">Confirm Password</label>
                            <input type="password" class="form-control" id="registerConfirmPassword" name="ConfirmPassword" placeholder="Confirm your password" />
                        </div>
                    </div>

                    <div class="mt-3 mb-3">
                        <button type="submit" class="btn btn-primary w-100">Sign up</button>
                    </div>
                    <p class="mt-4 mb-4">Do you have an account? Please <a class="" asp-controller="Client"
                            asp-action="Login">Login here</a> </p>
                </form>
            </div>

            <div class="col-md-6">
                <img 
                    src="https://www.freepnglogos.com/uploads/jet-png/download-jet-png-transparent-image-and-clipart-10.png"
                    alt="Raythos Aerospace Hangar" class="img-fluid w-100 img_transistion animated">
            </div>
        </div>
    </div>
</section>
