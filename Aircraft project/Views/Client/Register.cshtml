@{
    ViewData["Title"] = "Register";
}


<section class="vh-100 d-flex align-items-center justify-content-center">
    <div class="container">
        <div class="row shadow text-secondary ">
            <div class="col-md-6 shadow p-5 rounded">
                <h2 class="font-weight-bold">CREATE AN ACCOUNT</h2>
                <hr class="mb-5">

                <form>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="registerName" class="form-label">Full Name</label>
                            <input type="text" class="form-control" id="registerName" name="Name" required
                                placeholder="Enter your full name">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="registerEmail" class="form-label">Email Address</label>
                            <input type="email" class="form-control" id="registerEmail" name="Email" required
                                placeholder="Enter your email">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="registerMobile" class="form-label">Mobile Number</label>
                        <input type="tel" class="form-control" id="registerMobile" name="MobileNumber" required
                            placeholder="Enter your mobile number" pattern="[+][0-9]{10,15}">
                    </div>

                    <div class="form-group">
                        <label for="inputAddress">Address</label>
                        <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St">
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="registerPassword" class="form-label">Password</label>
                            <input type="password" class="form-control" id="registerPassword" name="Password" required
                                placeholder="Create a password">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="registerConfirmPassword" class="form-label">Confirm Password</label>
                            <input type="password" class="form-control" id="registerConfirmPassword"
                                name="ConfirmPassword" required placeholder="Confirm your password">
                        </div>
                    </div>

                    <div class="mt-3 mb-3">
                        <button type="submit" class="btn btn-primary w-100">Sign up</button>
                    </div>
                    <p class="mt-4 mb-4">Do you have an account? Please <a class="" asp-controller="Client"
                            asp-action="Login">Login here</a> </p>
                </form>
            </div>

            <div class="col-md-6">
                <img src="https://www.freepnglogos.com/uploads/jet-png/download-jet-png-transparent-image-and-clipart-10.png"
                    alt="Raythos Aerospace Hangar" class="img-fluid w-100       
                         img_transistion animated">


            </div>
        </div>
    </div>
</section>
