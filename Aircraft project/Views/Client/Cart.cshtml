@{
    ViewData["Title"] = "Cart";
}

<div class="cart-header">
    <h2>Cart (2)</h2>
</div>

<div class="cart-container">
    <div class="cart-item">
        <img src="/Images/jet2.jpg" alt="Dassault Falcon 900" class="item-image">
        <div class="item-details">
            <h3>Dassault Falcon 900</h3>
            <p>Color: Grey</p>
            <p>Seat Size: 4</p>
        </div>
        <div class="quantity-selector">
            <button>-</button>
            <input type="number" value="1">
            <button>+</button>
        </div>
        <p class="price">$20,120,000</p>
    </div>


    <div class="cart-summary">
        <h3>Summary</h3>
        <div class="summary-item">
            <span>Subtotal</span>
            <span>$40,240,000</span>
        </div>
        <div class="summary-item">
            <span>Shipping fee</span>
            <span>$20,000</span>
        </div>
        <div class="summary-item">
            <span>Quantity</span>
            <span>2</span>
        </div>
        <div class="summary-item">
            <strong>Total</strong>
            <strong>$40,260,000</strong>
        </div>
        <button class="checkout-btn">Checkout</button>
    </div>
</div>