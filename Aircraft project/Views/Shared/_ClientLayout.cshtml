                @HttpContextAccessor.HttpContext.Session.GetString("UserName")
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                <li><a class="nav-link" asp-controller="Client" asp-action="userProfile">User Dashboards</a>
                </li>
                <li>
                <hr class="dropdown-divider">
                </li>
                <li><a class="dropdown-item" asp-controller="Client" asp-action="Logout">Logout</a></li>
                </ul>
                </div>
                }
                else
                {
                <!-- User is not logged in -->
                <button class="button rounded-button-02">
                <a class="text-decoration-none" asp-controller="Client" asp-action="Login">LOGIN</a>
                </button>
                }
                </div> *@
            </div>
        </nav>
    </header>

    <div class="mb-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
